<resources>

    <style name="myTransparent">
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Translucent</item>
    </style>

    <style name="Tv13red" parent="TextStyle">
        <item name="android:textColor">@color/red_F67690</item>
        <item name="android:textSize">@dimen/size26</item>
    </style>

    <style name="Tv12white" parent="TextStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/size24</item>
    </style>

    <style name="Tv15white" parent="TextStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/size30</item>
    </style>

    <style name="Tv13gray" parent="TextStyle">
        <item name="android:textColor">@color/tab_gray</item>
        <item name="android:textSize">@dimen/size26</item>
    </style>

    <style name="Tv15gray" parent="TextStyle">
        <item name="android:textColor">@color/tab_gray</item>
        <item name="android:textSize">@dimen/size30</item>
    </style>

    <style name="Tv15black" parent="TextStyle">
        <item name="android:textColor">@color/black_333333</item>
        <item name="android:textSize">@dimen/size30</item>
    </style>

    <style name="Tv13black" parent="TextStyle">
        <item name="android:textColor">@color/black_333333</item>
        <item name="android:textSize">@dimen/size26</item>
    </style>
    <style name="Tv12black" parent="TextStyle">
        <item name="android:textColor">@color/black_333333</item>
        <item name="android:textSize">@dimen/size24</item>
    </style>

    <style name="Tv12gray" parent="TextStyle">
        <item name="android:textColor">@color/tab_gray</item>
        <item name="android:textSize">@dimen/size24</item>
    </style>

    <style name="TextStyle">
        <!--<item name="android:background">@null</item>-->
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:autoSizeTextType">uniform</item>    <!--即可自适应  宽度 < 8 > 18-->
        <item name="android:autoSizeMinTextSize">10dp</item>
        <item name="android:autoSizeMaxTextSize">15dp</item>
        <!--<item name="android:gravity">center</item>-->
        <!--<item name="android:maxLines">3</item>-->
        <!--<item name="android:ellipsize">end</item>-->
    </style>

</resources>
