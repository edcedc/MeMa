<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white">

        <View
            style="@style/divider_3"/>

        <android.support.v7.widget.AppCompatTextView
            android:text="价格区间"
            android:layout_margin="@dimen/px30"
            style="@style/Tv12gray" />

        <LinearLayout
            android:gravity="center"
            android:layout_marginLeft="@dimen/px30"
            android:layout_marginRight="@dimen/px30"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.flyco.roundview.RoundFrameLayout
                app:rv_cornerRadius="@dimen/px60"
                app:rv_backgroundColor="@color/white_f4f4f4"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content">

                <android.support.v7.widget.AppCompatEditText
                    android:id="@+id/et_di"
                    android:inputType="phone"
                    android:textSize="@dimen/size24"
                    android:hint="最低价"
                    android:background="@null"
                    android:maxLines="1"
                    android:padding="@dimen/px20"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </com.flyco.roundview.RoundFrameLayout>

            <View
                android:layout_margin="@dimen/px30"
                android:background="@color/black_333333"
                android:layout_width="20dp"
                android:layout_height="@dimen/px2"/>

            <com.flyco.roundview.RoundFrameLayout
                app:rv_cornerRadius="@dimen/px60"
                app:rv_backgroundColor="@color/white_f4f4f4"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content">

                <android.support.v7.widget.AppCompatEditText
                    android:id="@+id/et_gao"
                    android:inputType="phone"
                    android:maxLines="1"
                    android:textSize="@dimen/size24"
                    android:hint="最高价"
                    android:background="@null"
                    android:padding="@dimen/px20"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </com.flyco.roundview.RoundFrameLayout>

        </LinearLayout>

        <com.flyco.roundview.RoundTextView
            android:id="@+id/bt_submit"
            android:gravity="center"
            android:layout_marginTop="@dimen/px50"
            android:layout_marginLeft="@dimen/px30"
            android:layout_marginRight="@dimen/px30"
            android:layout_marginBottom="@dimen/px30"
            android:padding="@dimen/px20"
            android:textColor="@color/white"
            android:textSize="@dimen/size30"
            app:rv_backgroundColor="@color/red_EC5B44"
            android:text="确定"
            app:rv_cornerRadius="@dimen/px60"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

</FrameLayout>