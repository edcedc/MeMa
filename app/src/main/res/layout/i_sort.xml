<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <com.flyco.roundview.RoundTextView
        android:id="@+id/catalog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1.0"
        android:background="#E0E0E0"
        android:paddingLeft="@dimen/px100"
        android:paddingTop="5dip"
        android:paddingRight="@dimen/px50"
        android:paddingBottom="5dip"
        android:text="A"
        android:textColor="#ffffff"
        app:rv_backgroundColor="@color/red_F67690"
        app:rv_cornerRadius_BR="@dimen/px30"
        app:rv_cornerRadius_TR="@dimen/px30" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/px20"
        android:gravity="center"
        android:orientation="horizontal">

        <com.yc.mema.weight.CircleImageView
            android:id="@+id/iv_head"
            android:layout_width="@dimen/px100"
            android:layout_height="@dimen/px100"
            android:layout_marginLeft="@dimen/px50"
            android:layout_marginRight="@dimen/px30"
            android:src="@mipmap/place_holder_user" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dip"
            android:layout_weight="1.0"
            android:orientation="vertical"
            android:paddingTop="10dip"
            android:paddingBottom="10dip">

            <TextView
                android:id="@+id/title"
                style="@style/Tv15black" />

            <TextView
                android:id="@+id/tv_time"
                style="@style/Tv12gray" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_huifu"
            style="@style/Tv15gray"
            android:text="@string/recovery" />

    </LinearLayout>

</LinearLayout>