<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/white_f4f4f4">

        <include layout="@layout/include_top_gray"/>

        <com.flyco.roundview.RoundLinearLayout
            android:layout_margin="@dimen/px20"
            app:rv_cornerRadius="@dimen/px10"
            android:orientation="vertical"
            app:rv_backgroundColor="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/et_text"
                android:hint="@string/mema3"
                android:minLines="8"
                android:padding="@dimen/px30"
                android:gravity="top"
                android:layout_width="match_parent"
                android:background="@null"
                android:textSize="@dimen/size30"
                android:layout_height="match_parent" />

            <View
                style="@style/divider_3"/>

            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/et_phone"
                android:hint="@string/mema4"
                android:inputType="phone"
                android:padding="@dimen/px30"
                android:maxLength="11"
                android:gravity="top"
                android:layout_width="match_parent"
                android:background="@null"
                android:textSize="@dimen/size30"
                android:layout_height="match_parent" />


        </com.flyco.roundview.RoundLinearLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <com.flyco.roundview.RoundTextView
            android:id="@+id/bt_submit"
            style="@style/RedTextView"
            android:layout_marginLeft="@dimen/px30"
            android:layout_marginRight="@dimen/px30"
            android:layout_marginBottom="@dimen/px50"
            android:text="@string/submit2"
            app:rv_cornerRadius="@dimen/px10"
            app:rv_backgroundColor="@color/red_F67690" />

    </LinearLayout>

</layout>