<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:padding="@dimen/px30"
        tools:ignore="MissingConstraints">


        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tv_title"
            android:layout_marginTop="@dimen/px100"
            android:gravity="center"
            android:drawablePadding="@dimen/px30"
            android:drawableTop="@mipmap/shop_verify_processing"
            android:textSize="@dimen/size36"
            android:text="审核中"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            style="@style/Tv12black" />

        <android.support.v7.widget.AppCompatTextView
            android:layout_marginTop="@dimen/px50"
            android:id="@+id/tv_content"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@id/tv_title"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            style="@style/Tv12black" />

        <android.support.v7.widget.AppCompatTextView
            android:layout_marginTop="@dimen/px130"
            android:id="@+id/tv_text"
            app:layout_constraintTop_toBottomOf="@id/tv_content"
            android:layout_marginLeft="@dimen/px60"
            app:layout_constraintLeft_toLeftOf="parent"
            style="@style/Tv15black" />

        <com.flyco.roundview.RoundTextView
            android:id="@+id/bt_submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            android:gravity="center"
            android:padding="@dimen/px20"
            android:visibility="gone"
            android:textColor="@color/white"
            android:textSize="@dimen/size30"
            app:rv_backgroundColor="@color/red_EC5B44"
            app:rv_cornerRadius="@dimen/px10" />

    </android.support.constraint.ConstraintLayout>


</layout>