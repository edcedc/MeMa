<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/woyaofenxiang_yuanjiao_2"
        android:orientation="vertical">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:layout_gravity="top"
            android:layout_marginTop="@dimen/px40"
            android:theme="@style/AppTheme.AppBarLight"
            app:navigationIcon="@mipmap/close"
            app:popupTheme="@style/AppTheme.Popup"
            app:subtitleTextColor="@color/white"
            app:titleTextColor="@color/white">

            <TextView
                android:id="@+id/top_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/my_share"
                android:textColor="@color/black"
                android:textSize="19sp" />

            <FrameLayout
                android:id="@+id/top_right_fy"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:paddingLeft="20dp"
                android:paddingRight="15dp">

                <com.flyco.roundview.RoundTextView
                    android:id="@+id/top_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textColor="@color/black"
                    android:textSize="12sp" />

                <ImageView
                    android:id="@+id/top_right_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:visibility="gone" />

            </FrameLayout>

        </android.support.v7.widget.Toolbar>

        <com.flyco.roundview.RoundLinearLayout
            app:rv_cornerRadius="@dimen/px20"
            app:rv_backgroundColor="#fdded8"
            android:id="@+id/layout"
            android:layout_marginTop="@dimen/px20"
            android:layout_marginLeft="@dimen/px60"
            android:layout_marginRight="@dimen/px60"
            android:padding="@dimen/px80"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.v7.widget.AppCompatTextView
                android:textColor="@color/black_333333"
                android:drawablePadding="@dimen/px20"
                android:drawableLeft="@mipmap/y47"
                android:text="@string/mema13"
                style="@style/Tv13gray" />

            <android.support.v7.widget.AppCompatTextView
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/px80"
                android:text="@string/mema14"
                style="@style/Tv15black" />

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/iv_zking"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/px40"
                android:layout_width="200dp"
                android:layout_height="200dp" />

        </com.flyco.roundview.RoundLinearLayout>

        <com.flyco.roundview.RoundTextView
            android:id="@+id/bt_submit"
            android:ems="12"
            android:layout_marginTop="@dimen/px60"
            android:gravity="center"
            android:textSize="@dimen/size32"
            android:textColor="@color/white"
            android:padding="@dimen/px30"
            app:rv_cornerRadius="@dimen/px80"
            app:rv_backgroundColor="#FF8A00"
            android:layout_gravity="center"
            android:text="@string/mema15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <android.support.v7.widget.AppCompatTextView
            android:layout_marginBottom="@dimen/px40"
            android:layout_gravity="center"
            android:text="@string/mema16"
            style="@style/Tv15white" />

    </LinearLayout>

</layout>