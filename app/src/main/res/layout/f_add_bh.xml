<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/include_top_gray"/>

        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/et_text"
            android:layout_width="match_parent"
            android:maxLines="1"
            android:hint="@string/name_relationship"
            android:padding="@dimen/px30"
            style="@style/Tv15black"
            android:background="@color/white" />

        <View
            style="@style/divider_3"/>

        <FrameLayout
            android:id="@+id/layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <android.support.v7.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:background="@color/white"
                android:text="@string/choose_birthday"
                android:padding="@dimen/px30"
                style="@style/Tv15gray" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tv_time"
                android:layout_gravity="right"
                android:drawablePadding="@dimen/px20"
                android:drawableRight="@mipmap/tianjiashenrijilu_xiala_1"
                android:textColor="@color/red_F67690"
                android:padding="@dimen/px30"
                style="@style/Tv15black" />

        </FrameLayout>

    </LinearLayout>

</layout>