<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <LinearLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/include_top_black"/>

        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <FrameLayout
                    android:id="@+id/fy_layout"
                    android:background="@mipmap/y22"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.applikeysolutions.cosmocalendar.view.CalendarView
                        android:id="@+id/calendar_view"
                        app:calendarBackgroundColor="#F67690"
                        app:dayTextColor="#ffffff"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                </FrameLayout>

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/tv_title"
                    android:layout_marginTop="@dimen/px100"
                    android:layout_marginLeft="@dimen/px20"
                    android:text="AppCompatTextView"
                    android:textSize="20sp"
                    android:textColor="@color/red_EE3257"
                    style="@style/Tv15black" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false"
                    android:overScrollMode="never" />


            </LinearLayout>

        </android.support.v4.widget.NestedScrollView>

    </LinearLayout>


</layout>