<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <com.lcodecore.tkrefreshlayout.TwinklingRefreshLayout
        android:id="@+id/refreshLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.constraint.ConstraintLayout
            android:paddingBottom="@dimen/px20"
            tools:ignore="MissingConstraints"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.AppCompatImageView
                android:layout_width="match_parent"
                android:background="@mipmap/y10"
                android:layout_height="wrap_content" />

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/iv_col"
                android:layout_width="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginLeft="@dimen/px60"
                android:layout_marginTop="@dimen/px80"
                android:background="@mipmap/y11"
                android:layout_height="wrap_content" />

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/iv_msg"
                android:layout_width="wrap_content"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginRight="@dimen/px60"
                android:layout_marginTop="@dimen/px80"
                android:background="@mipmap/y12"
                android:layout_height="wrap_content" />


            <FrameLayout
                android:id="@+id/fy_head"
                android:layout_marginTop="100dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_width="175dp"
                android:layout_height="175dp">

                <com.yc.mema.weight.CircleImageView
                    android:src="@color/white"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <com.yc.mema.weight.CircleImageView
                    android:id="@+id/iv_head"
                    android:layout_margin="@dimen/px20"
                    android:layout_gravity="center"
                    android:src="@mipmap/place_holder_user"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </FrameLayout>

            <com.yc.mema.weight.CircleImageView
                android:id="@+id/iv_img"
                app:layout_constraintBottom_toBottomOf="@id/fy_head"
                app:layout_constraintRight_toRightOf="@id/fy_head"
                android:src="@mipmap/wode_xiugai_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tv_name"
                android:textSize="30sp"
                app:layout_constraintTop_toBottomOf="@id/fy_head"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tv_id"
                android:layout_marginTop="@dimen/px20"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/tv_hp"
                app:layout_constraintTop_toBottomOf="@id/tv_name"
                style="@style/Tv13gray" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tv_hp"
                app:layout_constraintLeft_toRightOf="@id/tv_id"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="@dimen/px20"
                app:layout_constraintTop_toBottomOf="@id/tv_name"
                style="@style/Tv13gray" />

        </android.support.constraint.ConstraintLayout>

        <View
            style="@style/divider_2" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tv_br"
            android:padding="@dimen/px30"
            android:background="?actionBarItemBackground"
            android:drawableRight="@mipmap/close"
            android:layout_width="match_parent"
            android:text="@string/birthday_prone"
            style="@style/Tv15black" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tv_bm"
            android:padding="@dimen/px30"
            android:background="?actionBarItemBackground"
            android:drawableRight="@mipmap/close"
            android:layout_width="match_parent"
            android:text="@string/birthday_memorandum"
            style="@style/Tv15black" />

        <View style="@style/divider_2" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tv_set"
            android:padding="@dimen/px30"
            android:background="?actionBarItemBackground"
            android:drawableRight="@mipmap/close"
            android:layout_width="match_parent"
            android:text="@string/set"
            style="@style/Tv15black" />

    </LinearLayout>

    </com.lcodecore.tkrefreshlayout.TwinklingRefreshLayout>

</layout>